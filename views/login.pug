doctype html
html( lang="en" )
  head
    title Login - Harvest Manager
    meta( charset='UTF-8' )
    meta( name='viewport' content='width=device-width, initial-scale=1.0' )
    meta( http-equiv='X-UA-Compatible' content='ie=edge' )
    link( rel="stylesheet", href='/assets/css/main.css' )

  body
    #login
      .login-form
        h1 Harvest Manager
        form( v-on:submit='loginForm' )
          .form-control
            label( for='email' ) Email
            input( value=user type='text' name='email' id='email' placeholder='Email' )
          .form-control
            label( for='password' ) Password
            input( value=pass type='password' name='password' id='password' placeholder='Password' )
          .form-control
            button Login
        .form-messages
          p {{ error }}

    script( src='/assets/js/vue.js' )
    script( src='/assets/js/login.js' )